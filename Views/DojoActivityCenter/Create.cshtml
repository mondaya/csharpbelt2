@{
    ViewData["Title"] = "Home Page";
}
<div>
        <a href="/logout">Logout</a>
</div>
<div>
        <a href="/Home">Home</a>
</div>
<div class="row">
        <div class="col-xs-12 col-lg-6">
                <h3 >Dojo Activity Center</h3>
        </div>
        <div class="col-xs-12 col-lg-2">
            <p ><b>Welcome,  @ViewBag.UserName<b></p>
        </div>        
</div><br>

<div class="row">
        <div class="col-xs-12 col-lg-6">
                <h2 >Create an Activity</h2>
        </div>               
</div><br>

<form action="create" method="post">
  <div class="form-inline" >
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" placeholder="title" name="Name">
    <label for="datetime">Date/Time</label>
    <input type="datetime-local" class="form-control" id="datetime"  name="EventDateTime">
  </div>
  <div class="form-inline" >
    <label for="duration">Duration</label>
    <input type="number" class="form-control" id="duration"  name="Duration">
    <select class="form-control" id="duration" name="DurationType">
        <option value=1>Hours</option>
        <option value=2>Minutes</option>  
        <option value=3>Day</option>               
    </select> 
  </div>   
  </div>
  <div class="form-group">
    <label for="Description">Description</label>
    <textArea type="text" class="form-control" id="Description" name="Description" ></textArea>  
      
  </div>     
  <button type="submit" class="btn btn-success">Create Activity</button>
</form>

<div class="row" id="errors">
        @{
            foreach(var error in ViewBag.Errors)
                {
                    if(@error.Errors.Count > 0)
                    {
                        <p>@error.Errors[0].ErrorMessage</p>
                    }
                }
        }
 </div>